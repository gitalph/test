{
    "name": "microservices-project",
    "version": "1.0.0",
    "scripts": {
        "generate-proto:unix": "mkdir -p ./src/generated/proto && protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts_proto --proto_path=./proto --ts_proto_out=./src/generated/proto --ts_proto_opt=outputServices=grpc-js,returnObservable=false,useExactTypes=true,importSuffix=.js ./proto/*.proto",
        "generate-proto": "npm run generate-proto:unix",
        "build": "tsc",
        "test": "jest --runInBand --no-cache",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage --color",
        "start:auth": "node dist/auth-service/server.js",
        "start:product": "node dist/product-service/server.js",
        "start:repository": "node dist/repository-service/server.js",
        "start:frontend-api": "node dist/frontend-api-service/server.js",
        "start:collect-items": "node dist/collect-items-service/server.js",
        "start:all": "concurrently \"npm run start:repository\" \"npm run start:auth\" \"npm run start:product\" \"npm run start:frontend-api\" \"npm run start:collect-items\" ",
        "lint": "eslint 'src/**/*.{js,ts}'",
        "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
        "start:local": "npm run build && npm run start:all"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.2",
        "@fastify/swagger": "^9.4.2",
        "@fastify/swagger-ui": "^5.2.1",
        "@grpc/grpc-js": "^1.6.6",
        "@grpc/proto-loader": "^0.7.5",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.1",
        "fastify-plugin": "^5.0.1",
        "joi": "^17.13.3",
        "postgres": "3.4.5",
        "redis": "^4.7.0",
        "winston": "3.17.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@stylistic/eslint-plugin-ts": "^2.13.0",
        "@types/bcrypt": "^5.0.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.0.0",
        "@types/supertest": "^6.0.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^8.21.0",
        "@typescript-eslint/parser": "^8.21.0",
        "concurrently": "^7.0.0",
        "eslint": "9.18.0",
        "eslint-plugin-promise": "^7.2.1",
        "grpc-tools": "^1.11.1",
        "jest": "^29.7.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node-dev": "^2.0.0",
        "ts-proto": "^2.6.1",
        "typescript": "5.7.3",
        "typescript-eslint": "8.21.0"
    },
    "type": "module"
}
